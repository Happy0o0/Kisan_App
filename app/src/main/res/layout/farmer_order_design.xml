<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#B9D9AD"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prof_img_buy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_buy"
            android:text="Crop Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:layout_marginLeft="50dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_subtype"
            android:text="Subtype"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:layout_below="@+id/order_buy"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"></TextView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_price"
            android:text="10"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:layout_below="@+id/order_subtype"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"></TextView>

        <TextView
            android:id="@+id/price_crop11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_subtype"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:text="Rs. "
            android:textColor="#000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/order_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_price"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:text="20"
            android:textColor="#000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/quantity_crop11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_price"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:text="Quantity:"
            android:textColor="#000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_quantity"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:text="Pending"
            android:textColor="#000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/status_crop11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_quantity"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/prof_img_buy"
            android:text="Status:"
            android:textColor="#000"
            android:textSize="15sp"></TextView>




    </RelativeLayout>



</androidx.cardview.widget.CardView>